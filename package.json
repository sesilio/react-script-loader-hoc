{
  "name": "react-script-loader-hoc",
  "description": "A higher-order React component that assists in the asynchronous loading of third party JS libraries (eg. Stripe.js)",
  "version": "1.1.0",
  "keywords": [
    "react",
    "reactjs",
    "react-component",
    "script-loader",
    "async",
    "stripe",
    "loader",
    "asynchronous",
    "stripe-react-elements",
    "higher-order-component"
  ],
  "author": {
    "name": "Nick Rogers"
  },
  "contributors": [
    {
      "name": "Dom Lyons"
    }
  ],
  "main": "./dist/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sesilio/react-script-loader-hoc"
  },
  "peerDependencies": {
    "react": ">=15.0.0 || >= 16.0.0"
  },
  "dependencies": {
    "hoist-non-react-statics": "^2.3.1",
    "react": "^16.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.26.1",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.11.0",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "jest-dom": "^2.1.0",
    "jest-watch-typeahead": "^0.2.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "react-dom": "^16.6.0",
    "react-testing-library": "^5.2.1",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "lint": "eslint src",
    "prettier": "prettier \"**/*.+(js|jsx|json)\"",
    "format": "yarn prettier --write",
    "validate": "yarn lint && yarn prettier --list-different",
    "precommit": "lint-staged",
    "clean": "rimraf ./dist",
    "build": "yarn clean && babel ./src -d dist"
  }
}
